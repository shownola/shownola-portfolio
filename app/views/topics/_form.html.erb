<%= form_for(@topic) do |f| %>

  <% if @topic.errors.any? %>
    <% @topic.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>


  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Topic', class: 'btn btn-primary btn-block' %>
  </div>

  <% end %>
