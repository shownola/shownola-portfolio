<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">

    <span class="card-img"><%= image_tag(portfolio_item.thumb_image.to_s, width: '100%') unless portfolio_item.thumb_image.nil?  %></span>
    <div class="card-body portfolio-name">
      <p class="card-text"><span class="portfolio-name"><%= link_to portfolio_item.title, portfolio_path(portfolio_item) %></span><span class="subtitle"><%= portfolio_item.subtitle %></span></p>

    </div>
  </div>
</div>

